#!/bin/bash

first="$1"
ext1="${first##*.}"
second="${first%.*}"  # split filename from 
ext2="${second##*.}"  # split filename from 

if [ "$ext1" == "bz2" ] && [ "$ext2" == "tar" ]; then
    echo "Extract tar.bz2"
    tar -jxvf $1 
elif [ "$ext1" == "gz" ] && [ "$ext2" == "tar" ]; then
    echo "Extract tar.gz"
    tar -zxvf $1
elif [ "$ext1" == "tar" ] && [ "$ext2" != "gz" ]; then
    echo "Extract tar to current folder"
    tar -xopf $1
else
    echo "No matched target"
fi
