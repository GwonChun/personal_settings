#!/bin/bash

# Arguments
# 1: attach / new
# 2: session number

SSH_HOME=younghwan@`curl -s myip.dnsomatic.com`
echo "Address of my computer: $SSH_HOME"
if [ -z $2 ]; then
	COM="tmux -CC $1"
else
	COM="tmux -CC $1 -t $2"
fi

if [[ $myip =~ ^147\.46\.[0-9]{1,3}\.[0-9]{1,3}$ ]]; then
	ssh -t linux "$COM"
else
	ssh -t server "ssh -t yhlinux '$COM'"
fi